{  
  "Logging": {  
    "LogLevel": {  
      "Default": "Information",  
      "Microsoft.AspNetCore": "Warning"  
    }  
  },  
  "AllowedHosts": "*",  
  "ReverseProxy": {
    "Routes": {
      "auth": {
        "ClusterId": "auth",
        "Match": { "Path": "/auth/{**catch-all}" },
        "Order": 1,
        "Transforms": [
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "connect": {
        "ClusterId": "auth",
        "Match": { "Path": "/connect/{**catch-all}" },
        "Order": 2,
        "Transforms": [
          { "PathPrefix": "/auth" },
          { "PathRemovePrefix": "/connect" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      }
    },  
    "Clusters": {  
      "spa": { "Destinations": { "d1": { "Address": "http://frontend:5173/" } } },  
      "auth": { "Destinations": { "d1": { "Address": "http://identityserver:7000/" } } }  
    }  
  }  
}
